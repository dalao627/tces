<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.StudentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.beans.Student">
        <id column="student_id" property="studentId" />
        <result column="student_no" property="studentNo" />
        <result column="student_name" property="studentName" />
        <result column="student_password" property="studentPassword" />
        <result column="student_sex" property="studentSex" />
        <result column="student_grade_id" property="studentGradeId" />
        <result column="student_status" property="studentStatus" />
        <result column="student_role_id" property="studentRoleId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        student_id, student_no, student_name, student_password, student_sex, student_grade_id, student_status, student_role_id
    </sql>

</mapper>
